<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_on_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="@string/online"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:id="@+id/rlImage"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="@dimen/_80sdp"
                    >

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/iv_user_image"
                        android:layout_width="@dimen/_77sdp"
                        android:layout_height="@dimen/_77sdp"
                        android:src="@drawable/app_icon"
                        android:layout_centerInParent="true"
                        app:siBorderColor="@color/white"
                        app:siBorderWidth="1.5dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/active_gender_ring" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llUserDetail"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/rlImage"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/llName"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_match_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:maxWidth="@dimen/_100sdp"
                            android:text="@string/name"
                            android:textColor="@color/field_text_color"
                            android:textSize="@dimen/_15ssp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_match_check"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_check_circular_button" />
                    </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rlName"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_match_age"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:gravity="center"
                                android:text="@string/name"
                                android:textColor="@color/field_text_color"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/tv_match_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/lato_regular"
                                android:gravity="center"
                                android:text="@string/name"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/llAddress"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Indore"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/txtCity"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/color_view2"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/lato_regular"
                        android:id="@+id/txtStatus"
                        android:layout_height="wrap_content" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/ly_accept_reject"
                        android:weightSum=".50"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/btn_accept_offer"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight=".20"
                            android:background="@drawable/bg_offer_accept_btn"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:text="@string/accept"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp" />


                        <TextView
                            android:id="@+id/btn_reject_offer"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight=".20"
                            android:background="@drawable/bg_tease_reject"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:text="@string/declined"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp" />




                    </LinearLayout>









                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Indore"
                    android:visibility="gone"
                    android:id="@+id/txtTimer"
                    android:layout_below="@+id/llUserDetail"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />




                <LinearLayout
                    android:id="@+id/ly_teases_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/rlImage"

                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/tv_teases_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:text="@string/name"
                        android:textColor="@color/field_text_color"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tv_teases_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_like_icon"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/teases_ico" />




            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ly_counter_price"
                android:layout_marginBottom="@dimen/_18sdp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_offer_status"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/time_left_for_this_tease_to_expire"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="visible" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/countdown_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        app:isHideTimeBackground="true"
                        app:isShowHour="true"
                        app:isShowDay="true"
                        app:suffixGravity="center"
                        android:layout_gravity="center"
                        app:isSuffixTextBold="true"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isTimeTextBold="true"
                        app:suffixHour=":"
                        app:suffixDay="days"
                        app:suffixMinute=":"
                        app:suffixSecond="  "
                        app:suffixTextColor="@color/field_text_color"
                        app:suffixTextSize="@dimen/_9ssp"
                        app:timeTextColor="@color/field_text_color"
                        app:timeTextSize="@dimen/_9ssp" />

            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>




    <TextView
        android:id="@+id/txt_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_gap2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone" />

</LinearLayout>