<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">


    <include
        android:id="@+id/ly_no_network"
        layout="@layout/view_no_network_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_margin="@dimen/_30sdp">

        <ImageView
            android:id="@+id/iv_legal_success"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/alert_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:maxLines="10"
            android:text="@string/email_verification_inst"
            android:textColor="@color/field_text_color"
            android:textSize="@dimen/_14ssp" />


        <TextView
            android:id="@+id/btn_varified"
            android:layout_width="200dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_login_btn"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="@string/btn_str"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"/>


        <TextView
            android:id="@+id/txt_gologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="Go To Login"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10sdp"
             android:layout_gravity="right"
            android:textStyle="bold"

            />

    </LinearLayout>


</LinearLayout>





