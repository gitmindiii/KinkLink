<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ed_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="bottom"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textColor="@color/field_text_color"
                        android:textColorHint="@color/field_text_color"
                        android:textSize="@dimen/_13ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/color_view1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/dob"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/lato_regular"
                            android:hint="@string/dob"
                            android:textColor="@color/field_text_color"
                            android:textColorHint="@color/field_text_color"
                            android:textSize="@dimen/_13ssp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="@dimen/_4sdp"
                            android:paddingStart="@dimen/_4sdp"
                            android:paddingTop="@dimen/_4sdp"
                            app:srcCompat="@drawable/ic_calendar" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/color_view1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/email_id"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ed_edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:enabled="false"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="bottom"
                        android:hint="@string/reg_email"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:textColor="@color/field_text_color"
                        android:textColorHint="@color/field_text_color"
                        android:textSize="@dimen/_13ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/color_view1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_edit_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/you_are_a"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:id="@+id/rl_edit_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_gender_dropdown"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="@dimen/_7sdp"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingTop="@dimen/_7sdp"
                            app:srcCompat="@drawable/ic_down_arrow" />

                        <TextView
                            android:id="@+id/ed_edit_gender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@null"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="bottom"
                            android:hint="@string/you_are_a"
                            android:maxLines="1"
                            android:textColor="@color/field_text_color"
                            android:textColorHint="@color/field_text_color"
                            android:textSize="@dimen/_13ssp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/color_view1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/looking_for_intent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:id="@+id/rl_intent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_7sdp"
                            app:srcCompat="@drawable/ic_down_arrow" />

                        <TextView
                            android:id="@+id/tv_intent"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:text="@string/looking_for_intent"
                            android:textColor="@color/field_text_color"
                            android:textSize="@dimen/_13ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/tv_intent"
                            android:background="@color/color_view1" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_50sdp">

                <TextView
                    android:id="@+id/btn_skip"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical|start"
                    android:background="@drawable/bg_login_btn"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:text="@string/btn_skip"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/btn_edit_basic_info"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_login_btn"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|end"
                    android:text="@string/btn_save_continue"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>