<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/ly_no_network"
        layout="@layout/view_no_network_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ly_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/action_bar_for_all_screens"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ly_activity_registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <LinearLayout
                        android:id="@+id/ly_edit_profile_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ly_status_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_step_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_active_step"
                                    app:srcCompat="@drawable/ic_success" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_step_one_bullet"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_active_step"
                                    app:srcCompat="@drawable/iv_active_bullet" />
                            </FrameLayout>

                            <View
                                android:id="@+id/status_view_1"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/gray" />

                            <FrameLayout
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_step_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_active_step"
                                    app:srcCompat="@drawable/ic_success" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_step_two_bullet"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_active_step"
                                    app:srcCompat="@drawable/iv_active_bullet" />

                                <TextView
                                    android:id="@+id/tv_step_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_inactive_step"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/step_two"
                                    android:textColor="@color/field_text_color"
                                    android:textSize="@dimen/_14ssp" />
                            </FrameLayout>

                            <View
                                android:id="@+id/status_view_2"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/gray" />

                            <FrameLayout
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_step_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_active_step"
                                    app:srcCompat="@drawable/iv_active_bullet" />

                                <TextView
                                    android:id="@+id/tv_step_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/iv_inactive_step"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/step_three"
                                    android:textColor="@color/field_text_color"
                                    android:textSize="@dimen/_14ssp" />
                            </FrameLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/ly_status_text_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_basic_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/basic_info"
                                android:textColor="@color/inactive_text_color"
                                android:textSize="@dimen/_11ssp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_other_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/about_me"
                                android:textColor="@color/inactive_text_color"
                                android:textSize="@dimen/_11ssp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_profile_pictures"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/profile_picture"
                                android:textColor="@color/inactive_text_color"
                                android:textSize="@dimen/_11ssp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/edit_fragment_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>