<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/header_bg">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_back" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/active_my_profile"
        android:visibility="gone" />

    <TextView
        android:id="@+id/action_bar_heading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:fontFamily="@font/philosopher_regular"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18ssp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_menu" />

    <RelativeLayout
        android:id="@+id/rl_notifications"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/iv_teases"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/notify_bell" />

        <TextView
            android:id="@+id/tv_notification_count"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/bg_notification_count"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_teases"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/teases_ico"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/active_settings"
        android:visibility="gone" />

</RelativeLayout>