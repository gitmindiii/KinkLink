<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ProgressBarTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/transprent</item>
        <item name="android:windowBackground">@color/transprent</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ChatAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
